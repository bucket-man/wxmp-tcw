/**app.wxss**/
.hide {
  display: none !important;
}

/* border line */
.border-line::after {
  position: absolute;
  box-sizing: border-box;
  content: ' ';
  pointer-events: none;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border: 0 solid #ebedf0;
  transform: scale(0.5);
}
.border-top::after {
  border-top-width: 1px;
}
.border-left::after {
  border-left-width: 1px;
}